<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/accountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="example@account.com"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        />

    <EditText
        android:id="@+id/groupNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New group"
        android:inputType="textCapWords|textNoSuggestions" >
    </EditText>

    <EditText
        android:id="@+id/searchNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type person&apos;s name"
        android:inputType="textNoSuggestions" >
        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/groupSearchLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:id="@+id/groupListRule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        />

    <ListView
        android:id="@+id/groupListLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>